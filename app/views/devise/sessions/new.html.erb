<div class="login-box">
    <h2>Sign in</h2>


      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="textbox"><i class="fa fa-user" aria-hidden="true"></i>
            <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %></div>
          <div class="textbox"><i class="fa fa-lock" aria-hidden="true"></i>
            <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %></div>
          <div class="remember-me"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
        </div>

        <div class="btn">
          <%= f.button :submit, "Sign in" %>
        </div>
      <% end %>



    <%= render "devise/shared/links" %>
</div>
